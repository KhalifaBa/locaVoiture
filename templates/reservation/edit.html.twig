{% extends 'base.html.twig' %}

{% block title %}Edit Reservation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Edit Reservation</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                 {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ include('reservation/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary mt-3">Back to list</a>

        {{ include('reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}
